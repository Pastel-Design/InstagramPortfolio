{extends "../@layout.latte"}
{block content}
    {var $i = 0}
    {foreach $albums as $album}
        <a href="/album/{$album["dash_title"]}" class="imageWrapper">
            <div class="image album lazyload" id="image_{$i}" data-bg='images/thumbnail/{$album["cover_photo"]}'><p>{$album["title"]}</p></div>
        </a>
        {php $i++}
    {/foreach}
{/block}